---
import markdownit from "markdown-it";
import { generateRoseyId } from "src/assets/js/generateRoseyId.mjs";
const md = markdownit({ html: true });
const { content } = Astro.props;
---

<!-- This is styled in src/styles/_markdown.scss, which also styles the blog markdown text -->
<div
  class="markdown-text"
  data-rosey={generateRoseyId(content)}
  set:html={md.render(content)}
/>
